<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/sUserName"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/bntGeneralInfo"
        android:layout_gravity="center"
        android:text="General Info"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btnDietChart"
        android:layout_gravity="center"
        android:text="Diet Chart"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btnDoctorList"
        android:layout_gravity="center"
        android:text="Doctor List"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btnVaccineList"
        android:layout_gravity="center"
        android:text="Vaccine List"/>

</LinearLayout>